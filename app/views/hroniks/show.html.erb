<% content_for :head do %>
<script src="http://vk.com/js/api/openapi.js" type="text/javascript" charset="windows-1251"></script>
<% end %>

<script type="text/javascript">
  VK.init({apiId: 3850211, onlyWidgets: true});
</script>

<script type="text/javascript">
  function addCommentCallback(num, last_comment, date, sign){
    $.post("/hroniks/comment",{
         type: 'vkontakte',
         num: num,
         last_comment: last_comment,
         date: date,
         sign: sign,
         id: "<%= @hronik.id %>"
    });
}
</script>


<div class="container" style="margin-top: 200px; margin-bottom: 100px;">
<div class="row">
  <div class="span12">
    <%= link_to hroniks_path, :class => 'link_to_back' do %>&larr; Назад, к "хроникам"<% end %>
	<div style="margin-top: 20px; margin-bottom: 20px;">
	<h1 style="color: #4c4c4c;"><%= @hronik.title %></h1>
	<div style="margin-top: 10px;">
	<% @hronik.tags.each do |tag| %>
	  <%= link_to tag.title, "#", :class=> 'tag_link' %>
	<% end %>
	</div>
	</div>
  </div>

  <div class="span9">
	<div class="hronik_cover"><%= image_tag(@hronik.cover.url(:show)) %></div>
    <div class="hronik_text"><%= @hronik.text.html_safe %></div>

	<div class="hronik_social">
		<p>Понравился сюжет? Расскажи друзьям!</p>
		<div id="vk_like"></div>
		<script type="text/javascript">
		 VK.Widgets.Like('vk_like');
		</script>
		<p>Нравятся «хроники»?</p>
		<%= link_to "Предложи свой сюжет", "#", :class => 'red_button' %>
	</div>

	<div id="vk_comments"></div>
	<script type="text/javascript">
	VK.Widgets.Comments("vk_comments", {limit: 10, width: "520", attach: "*", onChange: addCommentCallback}, "<%= @hronik.id %>");
	</script>
  </div>



  <div class="span3">
	 <div class="row">
       <% @hroniks.each do |hronik| %>
         <div class="span3" style="margin-top: 20px; margin-bottom: 40px;">
			<p><%= Russian::strftime(hronik.date, "%d %B") %></p>
			<%= link_to hronik.title, "#", :class=> 'hroniki_title_link' %><br>
			<% hronik.tags.each do |tag| %>
			  <%= link_to tag.title, "#", :class=> 'tag_link' %>
			<% end %>
			<div class="hroniki_image_container">
			<div class="hroniki_hover_small_container">
				<p>
				<% text = strip_tags(hronik.text).gsub(/&quot;/i,"").gsub(/&nbsp;/i,"") %>
				<%= truncate(text, length: 135, omission: '...').html_safe %></p>
				<div class="panel">
					<%= link_to "читать далее", hronik %><br>
					<div style="margin-top: 10px;">
					<%= image_tag "hroniki_comment.png" %>
					<span style="margin-right: 20px;"><%= hronik.comments_qty %></span>
					<%= image_tag "hroniki_watch.png" %>
					<%= hronik.session_hroniks.count %>
					</div>
				</div>
			</div>
			</div>
		</div>

	   <% end %>
	</div>
  </div>

</div>







</div>




</div>